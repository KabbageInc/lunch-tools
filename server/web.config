<configuration>
   <appSettings>
	<add key="LUNCH_TRANSLATOR_BASE_PATH" value="/lunch/" />
  </appSettings>
  <system.webServer>  
    <handlers>
      <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
    </handlers>	
	<rewrite>
      <rules>
		<rule name="Express">
			 <conditions>
				  <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
			 </conditions>
			 <action type="Rewrite" url="app.js"/>
		</rule>           
      </rules>	  
    </rewrite>	
	<iisnode node_env="production" />	  
  </system.webServer>
</configuration>